<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="abhinaycore" translate="label" sortOrder="150">
            <label>Abhinay Module(s)</label>
        </tab>
        <section id="abhinaycore" showInDefault="1" showInWebsite="1" showInStore="1" type="text" translate="label"
                 sortOrder="10">
            <label>Core Package</label>
            <tab>abhinaycore</tab>
            <resource>Abhinay_Core::abhinay_cofig</resource>
            <group id="general" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10">
                <label>General Setting(s)</label>
                <field id="enable" translate="label comment" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enable Core Module</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
